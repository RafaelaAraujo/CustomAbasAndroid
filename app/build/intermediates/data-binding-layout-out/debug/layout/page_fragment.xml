<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                                                                               
                                           

                 
                       
                                                                           
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/page_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/linear_topo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:tag="binding_1"                  
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:tag="binding_2"                                                               
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:tag="binding_3"                                                                    
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt_closed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:tag="binding_4"                                                                         
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                                                                                               />

            <TextView
                android:id="@+id/txt_future"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:tag="binding_5"              
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                                                                                                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_total_acumulative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:tag="binding_6"                                                                                                              
            android:weightSum="2">

            <TextView
                android:id="@+id/txt_accumulative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Gastos do mÃªs"
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_total_accumulative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="right"
                android:tag="binding_7"                                                               
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_generate_bilet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:tag="binding_8"                                                                                                                               
            android:text="@string/generate_billet"
                                                   
                                                                                                                                              />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="visible"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt_from_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="left"
                android:tag="binding_9"                                                                                                                                   
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txt_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/valores_em"
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/line_itens_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:paddingBottom="10dp" />
    </LinearLayout>
         